<!DOCTYPE html>
<html>

<header>
  <%- include('../partials/head')%>
</header>


<body class="container">
    <header>
      <%- include('../partials/header')%>
    </header>

  <main>
    <div class="jumbotron">
      <!--page to display all the users-->
      <h2>All Students</h2>

          <ul>
            <!-- for each user-->
            <% users.forEach(function(user) { %>
              <li>
                <!-- create a link which directs to our /profile route and provides the username for tha user-->
                <!-- display the users title, first and last name as the link text -->
                <a href="/profile?username=<%= user.login.username %>"> <%= user.name.title+" "+user.name.first+" "+ user.name.last %> </a>
              </li>
            <% }); %>
          </ul>


    </div>
  </main>


  <footer>
    <%- include('../partials/footer')%>
  </footer>
  
    <!-- Welcome section for logged-in user -->
    <div class="welcome-section">
      <h2>Welcome, <%= currentUser.username || currentUser.name || 'User' %>!</h2>
      <p>You are logged in as: <%= currentUser.email %></p>
    </div>
  
    <!-- Existing user profiles list -->
    <h1>User Profiles</h1>
    <div class="user-list">
      <% users.forEach(function(user) { %>
        <div class="user-card">
          <h3><%= user.username || user.name %></h3>
          <p>Email: <%= user.email %></p>
          
          <!-- Other user information -->
        </div>
      <% }); %>
    </div>
  
</body>

</html>
